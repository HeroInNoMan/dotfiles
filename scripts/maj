#!/usr/bin/env bash

echo "****************************************************"
echo "********** A P T I T U D E   U P D A T E ***********"
echo "****************************************************"
sudo aptitude update
echo "****************************************************"
echo "********* A P T I T U D E   U P G R A D E **********"
echo "****************************************************"
sudo aptitude full-upgrade -y
echo "****************************************************"
echo "****** A P T I T U D E   A U T O - C L E A N *******"
echo "****************************************************"
sudo aptitude autoclean -y
notify-send "Upgrade complete!"
# EOF
